<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">
    <title>Document</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Main Menu</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
              <a class="nav-link" aria-current="page" href="/">Home</a>
              <a class="nav-link active" href="/show">Booked Appointment</a>
            </div>
          </div>
        </div>
      </nav>
    <div class="container">
        <table class="table table-border table-bordered text-center shadow">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Mobile Number</th>
            </tr>
            <% users.forEach((user)=>{ %>
            <tr>
                <td><%= user.user_name %></td>
                <td><%= user.user_email %></td>
                <td><%= user.user_mobile %></td>
                <td><a href="/delete/<%= user.user_id %>" class="btn btn-danger btn-sm">delete</a></td>
                <td><a href="/edit/<%= user.user_id %>" class="btn btn-success btn-sm">edit</a></td>
            </tr>
            <% }) %>
        </table>
    </div>  
</body>
</html>