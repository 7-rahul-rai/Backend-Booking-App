<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <h1>Appointment Booking</h1>
    </div>
    <div class="container">
        <% users.forEach((user)=>{ %> 
        <form action="/update/<%= user.user_id %>" method="POST">
            <div class="form-group">
               <label for=""><b>Name</b></label>
               <input type="text" name="name" class="form-control" value="<%= user.user_name %>">
            </div>
            <div class="form-group">
                <label for=""><b>Email</b></label>
                <input type="email" name="email" class="form-control" value="<%= user.user_email %>">
             </div>
             <div class="form-group">
                <label for=""><b>Mobile Number</b></label>
                <input type="number" name="mobile" class="form-control" value="<%= user.user_mobile %>">
             </div>
             <input type="submit" class="btn btn-success mt-3" name="update" value="update">
        </form>
        <% }) %>
    </div>
</body>
</html>